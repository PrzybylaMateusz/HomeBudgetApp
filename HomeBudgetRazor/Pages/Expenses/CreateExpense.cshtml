@page
@model HomeBudgetRazor.Pages.CreateExpenseModel
@{
    ViewData["Title"] = "CreateExpense";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<body>
    <p>
        Enter the expense information:
    </p>
    <div asp-validation-summary="All"></div>
    <form method="POST">
        <div>Date: <input type="date" asp-for="Expense.DateOfExpense" value="@DateTime.Today.ToString("yyyy-MM-dd")"/></div>
        <div>Amount: <input asp-for="Expense.Amount" /></div>
        <div>Category: <select asp-for="Expense.Category" asp-items="@Model.AllCategories"><options value="">Please select:</options></select></div>
        <div>Description: <input asp-for="Expense.Description" /></div>

        <input type="submit" value="Send" />
    </form>
</body>
</html>